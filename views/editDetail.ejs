<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
        <section class="container">
                <div class="container">
                  <form class="" action="/task/edit/<%=editDetail.id%>" method="post">
                    <div class="field">
                      <label class="label">Task:</label>
                      <div class="control">
                        <input name="task" class="input" type="text" value="<%=editDetail.task%>" placeholder="Text input">
                      </div>
                    </div>
                    <div class="field">
                      <label class="label">Employee Assigned:</label>
                      <div class="control">
                        <div class="select">
                            <select name="UserId">
                              <%dataEmployes.forEach(listEmployes=>{%>
                                <%if(listEmployes.id===editDetail.UserId){%>
                                    <option selected value='<%=listEmployes.id %>'>
                                            <%=listEmployes.name %>
                                          </option>
                                <%}else {%>
                                    <option value='<%=listEmployes.id %>'>
                                            <%=listEmployes.name %>
                                          </option>
                                          <%}
                                }, this)%>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="field is-grouped">
                      <div class="control">
                        <button class="button is-primary">Submit</button>
                      </div>
                    </div>
                  </form>
                </div>
              </section>
</body>
</html>
