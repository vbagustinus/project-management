<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Project Management App</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.3/css/bulma.min.css">
</head>

<body>
  <!-- SECTION START -->
  <br>
  <br>
  <section class="container">
    <div class="container">
      <form class="" action="#" method="post">
        <div class="field">
          <label class="label">Name</label>
          <div class="control">
            <input name="name" class="input" type="text" placeholder="Text input">
          </div>
        </div>

        <div class="field">
          <label class="label">Username</label>
          <div class="control has-icons-left has-icons-right">
            <input name="username" class="input is-success" type="text" placeholder="Username input" value="">
            <span class="icon is-small is-left">
        <i class="fa fa-user"></i>
      </span>
            <span class="icon is-small is-right">
        <i class="fa fa-check"></i>
      </span>
          </div>
          <p class="help is-success">This username is available</p>
        </div>

        <div class="field">
          <label class="label">Password</label>
          <div class="control has-icons-left has-icons-right">
            <input name="password" class="input is-danger" type="password" placeholder="Password input" value="">
            <span class="icon is-small is-left">
        <i class="fa fa-envelope"></i>
      </span>
            <span class="icon is-small is-right">
        <i class="fa fa-warning"></i>
      </span>
          </div>
          <p class="help is-danger">This password is invalid!</p>
        </div>

        <div class="field">
          <label class="label">Role</label>
          <div class="control">
            <div class="select">
              <select name="role">
          <option value="employee">Employee</option>
          <option value="manager">Manager</option>
        </select>
            </div>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-primary">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </section>
  <!-- SECTION END -->
  <!-- FOOTER START -->
  <br>
  <br>
  <footer class="footer">
    <div class="container">
      <div class="content has-text-centered">
        <p>
          <strong>Project Management Panel</strong> by Agustinus and Albert. The source code is licensed
          at Hacktiv8.
        </p>
        <p>
          <a class="icon" href="https://github.com/jgthms/bulma">
          <i class="fa fa-github"></i>
        </a>
        </p>
      </div>
    </div>
  </footer>
  <!-- FOOTER END -->
</body>
</html>
