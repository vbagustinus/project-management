<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head')%>
</head>

<body>
  <%- include('./partials/header')%>
  <!-- SECTION START -->
  <br>
  <br>
  <section class="container">
    <div class="container">
      <form class="" action="<%=editUser.id%>" method="post">
        <div class="field">
          <label class="label">Name</label>
          <div class="control">
            <input name="name" value="<%=editUser.name%>" class="input" type="text" placeholder="Text input">
          </div>
        </div>

        <div class="field">
          <label class="label">Username</label>
          <div class="control has-icons-left has-icons-right">
            <input name="username" class="input is-success" type="text" placeholder="Username input" value="<%=editUser.username%>">
            <span class="icon is-small is-left">
        <i class="fa fa-user"></i>
      </span>
            <span class="icon is-small is-right">
        <i class="fa fa-check"></i>
      </span>
          </div>
          <p class="help is-success">This username is available</p>
        </div>

        <div class="field">
          <label class="label">Password</label>
          <div class="control has-icons-left has-icons-right">
            <input name="password" class="input is-danger" type="password" placeholder="Password input" value="">
            <span class="icon is-small is-left">
        <i class="fa fa-envelope"></i>
      </span>
            <span class="icon is-small is-right">
        <i class="fa fa-warning"></i>
      </span>
          </div>
          <p class="help is-danger">This password is invalid!</p>
        </div>

        <div class="field">
          <label class="label">Role</label>
          <div class="control">
            <div class="select">
              <select name="role">
                <%if(editUser.role==='manager'){%>
                  <option value="employee">Employee</option>
                  <option selected value="manager">Manager</option>
                <%} else if(editUser.role==='employee'){%>
                  <option selected value="employee">Employee</option>
                  <option value="manager">Manager</option>
                <%}%>
              </select>
            </div>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-primary">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </section>
  <!-- SECTION END -->
  <%- include('./partials/footer')%>
</body>
</html>
